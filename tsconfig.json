{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@": ["./src"],
      "@/*": ["./src/*"],
      "~": ["./"],
      "~/*": ["./*"],
      "@components": ["./src/components"]
    }
  },
  "include": ["src/**/*"],
  "types": ["jest", "node"]
}
